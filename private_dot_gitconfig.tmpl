[color]
	ui = auto
	diff = auto
[user]
	name = Daniel Nitsikopoulos
	email = daniel@dnitza.com
	signingkey = ssh-rsa 
[core]
    pager = delta --plus-color="#012800" --minus-color="#340001" --theme='Monokai Extended'

[interactive]
    diffFilter = delta --color-only
[difftool]
	prompt = false
[mergetool]
	prompt = false
[init]
	defaultBranch = main
[gpg]
	format = ssh
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[commit]
	gpgsign = true
[credential]
  helper = osxkeychain
